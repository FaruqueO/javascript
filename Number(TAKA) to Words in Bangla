$('#ID').change(function () {
	var tk = $('#ID').val();
  var res = tk.split(".");
	var text = convert_koti(res[0]);
  var textpoy = convert_tens(res[1]);
  alert(tk + ' : '+ text +' টাকা '+ textpoy +' পয়সা');
});

var ones=['','এক','দুই','তিন','চার','পাঁচ','ছয়','সাত','আট','নয়'];
var tens=['','',  'বিশ',   'ত্রিশ',    'চল্লিশ',   'পঞ্চাশ',   'ষাট',    'সত্তর' ,  'আশি',    'নব্বই'];
var teens=['দশ','এগার','বার','তের','চৌদ্দ','পনের','ষোল','সতের','আঠার','ঊনিশ'];
var numword = ['শূন্য','এক','দুই','তিন','চার','পাঁচ','ছয়','সাত','আট','নয়','দশ','এগার','বার','তের','চৌদ্দ','পনের','ষোল','সতের','আঠার','ঊনিশ','বিশ','একুশ','বাইশ','তেইশ','চব্বিশ','পঁচিশ','ছাব্বিশ','সাতাশ','আঠাশ',
